{
  "name": "@stoplight/better-ajv-errors",
  "version": "0.0.3+4d11498e",
  "description": "JSON Schema validation for Human",
  "repository": "stoplightio/better-ajv-errors",
  "main": "dist/index.js",
  "keywords": [
    "json-schema",
    "ajv",
    "ajv-errors"
  ],
  "sideEffects": false,
  "author": "Rifat Nabi <to.rifat@gmail.com>",
  "maintainers": [
    "Rifat Nabi <to.rifat@gmail.com>",
    "Dmitrii Sorin <info@staypositive.ru>",
    "Tong Li"
  ],
  "engines": {
    "node": ">=10.8"
  },
  "license": "Apache-2.0",
  "typings": "typings.d.ts",
  "files": [
    "dist",
    "index.js",
    "typings.d.ts"
  ],
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "rollup --format=cjs -d dist -- src/index.js",
    "prepublish": "yarn test && yarn build",
    "format": "prettier --write src/*.js src/**/*.js",
    "test": "jest",
    "test-ci": "jest --coverage --colors"
  },
  "dependencies": {
    "jsonpointer": "^4.0.1",
    "leven": "^3.1.0"
  },
  "peerDependencies": {
    "ajv": ">=6"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js"
    ]
  }
}
